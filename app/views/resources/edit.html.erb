<h1>Editing resource</h1>

<% form_for(@resource) do |f| %>
  <%= f.error_messages %>
	
	<p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 60 %>
  </p>	
	
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link, :size => 60  %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :topicid %><br />
    <%= f.text_field :topicid %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @resource %> |
<%= link_to 'Back', resources_path %>